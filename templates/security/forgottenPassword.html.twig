            <h1 id="fp-title">Mot de passe oubli√©</h1>
            <p class="fp-text">Veuillez saisir votre e-mail</p>
            <div class="fp-container">
                {{ form_start(forgottenPasswordForm, { 'attr': {'class': 'forgot-pass'} }) }}
                    {{ form_errors(forgottenPasswordForm) }}
