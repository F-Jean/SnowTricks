{% for comment in comments %}
    <div class="comment-container">
        <div>
            <span>{{ comment.user.username }}</span>
        </div>
        <div>
            <span>{{ comment.content }}</span>
        </div>
        <div>
            <span>{{ comment.postedAt|date('d/m/Y h:i') }}</span>
        </div>
    </div>
{% endfor %}