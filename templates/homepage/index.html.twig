{% extends 'layout.html.twig' %}

{% block container %}
    <!-- Banner -->
    <section class="vh-100" style="background-image: url('../img/header5.jpg'); background-size: cover;">
        <div class="banner-text w-100 px-5">
            <div class="h3 text-white" style="letter-spacing: 4px;">Snowtricks logo</div>
            <div class="vh-100 d-flex flex-column justify-content-center">
                <h1 style="color: #cfcfcf; letter-spacing: 4px; font-size: 200px; line-height: 160px;">more</br>tricks</h1>
                <p>Bibliotèque de figures de snowboard. Inscris-toi et aide à
            l'enrichissement des connaissances.</p>
                <div class="d-flex justify-content-end">
                    <a href="#content-trick" class="btn col-xl-1 py-3 border border-white rounded-pill" style="color: white; letter-spacing: 1px;">Voir Plus</br><i class="fas fa-arrow-circle-down"></i></a>
                </div>
            </div>
        </div>
    </section>
    <!-- btn go back up -->
    <div class="btn-go-up">
        <img src="../img/arrow-alt-circle-up-solid.svg" alt="" class="icone-arrow" >
    </div>
    <!-- Trick Section-->
    <div class="content" id="content-trick">
        <h1 class="content-title">Liste des figures de snowboard</h1>
        {% if is_granted('ROLE_USER') %}
        <div class="homepage-content-text">
            <a href="{{path('trick_add')}}" class="login-homepage-text">Ajouter une nouvelle figure</a>
        </div>
        {% else %}
        <div class="homepage-content-text">
            <p class="login-homepage-text">Il faut être connecté afin de pouvoir ajouter une nouvelle figure.</p>
            <a href="{{path('security_login')}}" class="btn btn-primary login-homepage-btn">Connexion</a>
        </div>
        {% endif %}
        <section id="trick-list" class="trick-list">
            {{ include("homepage/trick.html.twig") }}
        </section>
        <div>
            <button class="load btn btn-primary" href="#">Afficher Plus</button>
        </div>
    </div>
{% endblock %}
