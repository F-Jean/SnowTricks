{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Custom styles for this template -->
    <link href="/css/snowtricks.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="banner">
        <div class="banner-text">
            <h1>more</br>tricks</h1>
            <p>Bibliot√®que de figures de snowboard. Le site est communautaire viens 
            enrichir nos connaissances.</p>
            <a href="#top-menu" class="btn">View more</br><i class="fas fa-arrow-circle-down"></i></a>
        </div>
        <div class="sidebar"></div> 
    </div>
    <nav id="top-menu" class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">SnowTricks</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/tricks">Figures</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/signUp">S'enregistrer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Connexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="content">
        <h1>Liste des figures de snowboard</h1>
        <section id="trick-list" class="trick-list">
            {% for trick in tricks %}
                <div class="trick-thumbnail">
                    <div class="trick-illustration">
                        <img src="https://placehold.co/325x225" alt="">
                    </div>
                    <div class="trick-title">
                        <a href="" class="">{{ trick.name }}</a>
                    </div>
                    <div class="trick-options">
                        <a href="" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="" class="btn btn-primary"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </div>                
{% endblock %}
