{% for trick in tricks %}
    <div class="trick-thumbnail">
        <div class="trick-illustration">
            <img src="https://placehold.co/325x200" alt="">
        </div>
        <div class="trick-title">
            <a href="{{ path('trick_show', {'id' : trick.id}) }}" class="trick-number">{{ trick.name }}</a>
        </div>
        <div class="trick-options">
            <a href="" class="btn btn-primary edit-btn"><i class="fas fa-edit"></i></a>
            <a href="" class="btn btn-primary delete-btn"><i class="fas fa-trash-alt"></i></a>
        </div>
    </div>
{% endfor %}