{% for trick in tricks %}
    <div class="trick-thumbnail">
        <div class="trick-illustration">
            <img src="{{ asset('uploads/trick_images/'~trick.illustrations|first.path) }}" alt="" class="trick-img-thumbnail" width="325" height="200">
        </div>
        <div class="trick-title">
            <a href="{{ path('trick_show', {'id' : trick.id}) }}" class="trick-number">{{ trick.name }}</a>
        </div>
        {% if is_granted('ROLE_USER') %}
            <div class="trick-options">
                <a href="{{ path('trick_edit', {'id' : trick.id}) }}" class="btn btn-primary edit-btn"><i class="fas fa-edit"></i></a>
                <a href="{{ path('trick_delete', {'id' : trick.id}) }}" class="btn btn-primary delete-btn"><i class="fas fa-trash-alt"></i></a>
            </div>
        {% endif %}
    </div>
{% endfor %}